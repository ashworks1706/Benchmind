# Docker Environment Variables
# Copy this file to .env and fill in your values

# GitHub OAuth Configuration
# Register an OAuth app at: https://github.com/settings/developers
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:5000/auth/github/callback
GITHUB_OAUTH_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_OAUTH_CLIENT_SECRET=your_github_oauth_client_secret_here
GITHUB_OAUTH_CALLBACK=http://localhost:5000/auth/github/callback

# Security Secrets
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_SECRET=your_encryption_secret_here

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GITHUB_TOKEN=your_github_token_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
